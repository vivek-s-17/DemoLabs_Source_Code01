{
  "ConnectionStrings": {
    "DefaultConnectionString": "Initial Catalog=DemoWebApiDb;Data Source=.;Integrated Security=True;Trust Server Certificate=True;"
  },
  "MyAppSettings": {
    "AngularDevServer": "http://localhost:4200",
    "AngularCORSPolicyName": "AngularPolicy"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.MSSqlServer",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithProcessId"
    ],
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Initial Catalog=DemoWebApiDb;Data Source=.;Integrated Security=True;Trust Server Certificate=True;",
          "sinkOptionsSection": {
            "tableName": "ApiLogs",
            "schemaName": "dbo",
            "autoCreateSqlTable": false
          }
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      },
      {
        "Name": "Console"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
